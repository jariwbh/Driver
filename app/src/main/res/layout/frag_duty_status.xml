<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeface="http://schemas.android.com/apk/res/com.taxiex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_register"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    android:weightSum="4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.10"
            android:orientation="vertical"
            
            android:weightSum="2" >

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/fragduty_driver_name_text"
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:background="@color/white"
                android:gravity="bottom|center_horizontal"
                android:lineSpacingExtra="@dimen/linespacing_dp"
                android:padding="@dimen/activity_padding"
                android:text="@string/duty_status_driver_name"
                android:textColor="@color/text_color" />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/fragduty_online_status_text"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".8"
                android:background="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/linespacing_dp"
                android:padding="@dimen/activity_padding"
                android:text="@string/duty_status_online_status_text" 
                android:textColor="@color/text_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.10"
            android:background="@color/theme_color"
            android:orientation="horizontal"
            android:padding="@dimen/activity_margin_twenty"
            android:weightSum="2"
            >

            <ImageView
                android:id="@+id/fragduty_go_online_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_color_another"
                android:gravity="center"
                android:padding="@dimen/activity_padding"
                android:scaleType="center"
                android:src="@drawable/icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_color_another" >

                <ImageView
                    android:id="@+id/frag_duty_go_online_text"
                    style="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_color_another"
                    android:padding="@dimen/activity_margin"
                    android:src="@drawable/go_online"
                    android:textSize="27sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
       />
        -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.20"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/activity_padding"
            android:src="@drawable/cars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".60"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/activity_padding"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/frag_duty_status_car_selected_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:padding="@dimen/activity_padding"
                android:scaleType="center"
                android:src="@drawable/icon" />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/frag_duty_status_vehicle_details"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingExtra="@dimen/linespacing_dp"
                android:padding="@dimen/activity_padding"
                android:textColor="@color/text_color" />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/frag_duty_status_change_vehicle"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="@dimen/activity_padding"
                android:drawableRight="@drawable/change_vehicle_arrow"
                android:gravity="right"
                android:lineSpacingExtra="@dimen/linespacing_dp"
                android:padding="@dimen/activity_padding"
                android:text="@string/duty_status_change_vehicle_text"
                android:textColor="@color/text_color"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>