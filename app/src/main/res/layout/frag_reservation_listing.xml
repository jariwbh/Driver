<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:gravity="center_horizontal"
      >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center"
         
         
         >
         
         
         <ImageButton
             android:id="@+id/btnPending"
             android:layout_width="wrap_content"
             android:src="@drawable/subbar_btn_pending"
             android:layout_height="wrap_content"
                android:background="@color/transparent"
            />
         
            
              <ImageButton
             android:id="@+id/btnCancelled"
             android:layout_width="wrap_content"
                   android:src="@drawable/subbar_btn_cancel"
               android:background="@color/transparent"
             android:layout_height="wrap_content"/>
       
         <ImageButton
             android:id="@+id/btnConfirmed"
             android:layout_width="wrap_content"
             
                     android:background="@color/transparent"
               android:src="@drawable/subbar_btn_confirmed"
             android:layout_height="wrap_content"/>
         
       
         
         
         </LinearLayout>
     
    
     
    <ListView 
        android:layout_marginTop="5dp"
        android:id="@+id/frag_reservation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/theme_brown_color"
        android:dividerHeight="1dp"
        android:background="@drawable/login_screen_background">
        
    </ListView>
    

</LinearLayout>
