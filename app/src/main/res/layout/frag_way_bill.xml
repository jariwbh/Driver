<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeface="http://schemas.android.com/apk/res/com.taxiex"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/activity_margin_twenty"
    android:background="@drawable/login_screen_background"
    android:padding="@dimen/activity_padding" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_padding"
        android:orientation="vertical" >

        <com.tms.driver.customviews.CustomTextView
            android:id="@+id/frag_way_bill_taxi_name"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/activity_margin"
            android:padding="@dimen/activity_padding"
            android:textColor="@color/text_color"
            
            />

        <View
            android:layout_height="1dp"
            android:background="#000000" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_padding" >

            <com.tms.driver.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:text="@string/way_bill_driver_name"
               android:textColor="@color/text_color"
              />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/way_bill_driver_name_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:textColor="@color/text_color"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_padding" >

            <com.tms.driver.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:text="@string/way_bill_driver_license"
               android:textColor="@color/text_color"
               />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/way_bill_driver_license_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                 android:textColor="@color/text_color"
            />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_padding" >

            <com.tms.driver.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:text="@string/way_bill_license_plate"
                android:textColor="@color/text_color"
                />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/way_bill_driver_license_plate_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:textColor="@color/text_color"
               />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_padding" >

            <com.tms.driver.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:text="@string/way_bill_time"
                android:textColor="@color/text_color"
