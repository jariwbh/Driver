                android:id="@+id/way_bill_passengers_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                 android:textColor="@color/text_color"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_padding" >

            <com.tms.driver.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:text="@string/way_bill_trip"
                 android:textColor="@color/text_color"
           />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/way_bill_trip_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                 android:textColor="@color/text_color"
               />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_padding" >

            <com.tms.driver.customviews.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:text="@string/way_bill_via"
                android:textColor="@color/text_color"
               />

            <com.tms.driver.customviews.CustomTextView
                android:id="@+id/way_bill_via_textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingExtra="@dimen/activity_margin"
                android:textColor="@color/text_color"
               />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
